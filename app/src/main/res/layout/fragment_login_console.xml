<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/bgImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/frontpic" />

    <TextView
        android:id="@+id/logger"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:background="#44000000"
        android:maxLines="13"
        android:textColor="@color/white"
        android:scrollbars="vertical"
        android:textSize="14sp"
        android:layout_alignTop="@+id/teraimlogo"
        android:layout_toLeftOf="@+id/vortexlogo" />

    <ImageView
        android:id="@+id/vortexlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/teraimlogo"
        android:src="@drawable/vortex_small" />

    <TextView
        android:id="@+id/appTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/versionTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/logger"
        android:background="#44000000"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/versionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logger"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/logger"
        android:layout_marginLeft="5dp"
        android:background="#44000000"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/teraimlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vortexlogo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/teraim_small_w" />
    <TextView
        android:id="@+id/licenseTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:layout_above="@+id/appTxt"
        />

    <ImageView
        android:id="@+id/logo"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"

        />

</RelativeLayout>