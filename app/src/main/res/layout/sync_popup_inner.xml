<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sync_menu_pop_bg"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="3dp"
        android:text="@string/sync_pop_header"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentBottom="false"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"

        android:background="@drawable/grey_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:padding="3dp"
            android:text="@string/sync_pop_sync_on" />

        <TextView
            android:id="@+id/synk_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/textView4">

        <Switch
            android:paddingLeft="3dp"
            android:id="@+id/sync_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/ll4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:padding="3dp"
            android:text="@string/sync_pop_time_since_last_sync" />

        <TextView
            android:id="@+id/sync_time_since_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="3dp"
            android:text="3 minutes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/ll2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:padding="3dp"
            android:text="@string/sync_pop_unsynced_user" />

        <TextView
            android:id="@+id/sync_objects_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="3dp"
            android:text="3 minutes" />
    </LinearLayout>



    <Button
        android:id="@+id/sync_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll1"
        android:layout_alignRight="@+id/ll1"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="15dp"
        android:text="@string/sync_pop_sync_button_txt" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/sync_button"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/line1"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="@string/sync_pop_sync_last_sync" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp" />
    </ScrollView>

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ll1"
        android:layout_marginBottom="5dp"
        android:text="@string/ok" />

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:text="Refresh"
        android:drawableLeft="@drawable/refresh"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll1"
        android:layout_alignRight="@+id/ll1"
        android:layout_alignTop="@+id/textView8"
         />

    <TextView
        android:id="@+id/sync_refresh_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll1"
        android:layout_below="@+id/refresh_button"

        android:text=""
        android:textStyle="italic"
        android:layout_alignRight="@+id/ll1" />

</RelativeLayout>